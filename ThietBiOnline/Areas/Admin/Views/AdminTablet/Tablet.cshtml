@model IEnumerable<ThietBiOnline.Models.EF.Tablet>

@{
    ViewBag.Title = "Tablet";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}

<h2>Tablet</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

