@model ThietBiOnline.Models.DTO.LoginViewModels
<html>
<head>
    <link href="~/Content/TemplateAdmin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Content/TemplateAdmin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/jquery/jquery.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
</head>
<body id="LoginForm">
    <div class="container">
        <div class="login-form">
            <div class="main-div">
                <div class="panel">
                    <h1>Admin Login</h1>
                    <p>Please enter your email and password</p>
                </div>
                @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                {
                    @Html.ValidationSummary(false, "", new { @class = "text-danger"})
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @autofocus = "autofocus", @placeholder = "UserName" })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password" })
                    </div>
                    <!-- Change this to a button or input when using this as a form -->
                    <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                }
            </div>
        </div>
    </div>
</body>
</html>

<link href="~/Content/Login.css" rel="stylesheet" />