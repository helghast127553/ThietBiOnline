<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <title>SB Admin - Dashboard</title>

    <!-- Bootstrap core CSS-->
    <link href="~/Content/TemplateAdmin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Custom fonts for this template-->
    <link href="~/Content/TemplateAdmin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" />

    <!-- Page level plugin CSS-->
    <link href="~/Content/TemplateAdmin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />

    <!-- Custom styles for this template-->
    <link href="~/Content/TemplateAdmin/css/sb-admin.css" rel="stylesheet" />

    <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>
</head>

<body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        <a class="navbar-brand mr-1" href="index.html">Start Bootstrap</a>

        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>

    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Laptop", "AdminLaptop")">
                    <span> Laptop </span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Phone", "AdminPhone")">
                    <span> Phone </span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("Tablet", "AdminTablet")">
                    <span> Tablet </span>
                </a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="@Url.Action("DonHang", "AdminDonHang")">
                    <span> Đơn Hàng </span>
                </a>
            </li>
        </ul>

        <div id="content-wrapper">

            <div class="container-fluid">

              @RenderBody()

            </div>
            <!-- /.container-fluid -->
            <!-- Sticky Footer -->
            <footer class="sticky-footer">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright © Your Website 2018</span>
                    </div>
                </div>
            </footer>

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/TemplateAdmin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/TemplateAdmin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/Content/TemplateAdmin/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Content/TemplateAdmin/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/TemplateAdmin/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/Content/TemplateAdmin/js/demo/datatables-demo.js"></script>
    <script src="~/Content/TemplateAdmin/js/demo/chart-area-demo.js"></script>

</body>

</html>
